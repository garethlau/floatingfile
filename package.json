{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "0.0.0",
  "name": "floatingfile-mono",
  "devDependencies": {
    "lerna": "^3.22.1"
  },
  "scripts": {
    "dev": "yarn run dev:app",
    "dev-app": "lerna run --parallel --stream dev --scope={@floatingfile/client,@floatingfile/server}",
    "dev-landing": "lerna run --parallel --stream dev --scope=@floatingfile/landing",
    "build-client": "yarn run build-client:prod",
    "build-client:prod": "lerna run build --stream --scope=@floatingfile/client",
    "build-client:staging": "lerna run build:staging --stream --scope=@floatingfile/client",
    "build-server": "yarn run build-server",
    "build-server:prod": "lerna run build --stream --scope=@floatingfile/server",
    "build-server:staging": "yarn run build-server",
    "build-app": "yarn run build-client && yarn run build-server",
    "build-app:staging": "yarn run build-client:staging && yarn run build-server:staging",
    "new-version": "lerna version --conventional-commits --yes",
    "diff": "lerna diff"
  },
  "dependencies": {}
}
